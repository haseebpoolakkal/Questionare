<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/admin_result_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/admin_result_layout_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="Date" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/admin_result_layout_child_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_color"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="Name" />

            <RelativeLayout
                android:id="@+id/admin_result_row_2"
                android:layout_width="match_parent"
                android:layout_below="@id/admin_result_layout_child_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/admin_result_layout_parent_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="@string/parent_name" />

                <TextView
                    android:id="@+id/admin_result_layout_parent_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/admin_result_layout_parent_name_text"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:text="name" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/admin_result_row_3"
                android:layout_width="match_parent"
                android:layout_below="@id/admin_result_row_2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/admin_result_layout_mark_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="@string/mark_results" />

                <TextView
                    android:id="@+id/admin_result_layout_mark"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/admin_result_layout_mark_text"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:text="Mark" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>